// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ARTIST
  ADMIN
}

enum SubscriptionPlan {
  FREE
  PREMIUM
}

enum PaymentStatus {
  CREATED
  APPROVED
  COMPLETED
  CANCELLED
  FAILED
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String
  password  String
  avatar    String?
  role      Role            @default(USER)
  subscriptionPlan SubscriptionPlan @default(FREE)
  subscriptionExpiresAt DateTime?
  hasAds    Boolean  @default(true)
  twoFactorEnabled Boolean @default(false)
  twoFactorCode String?
  twoFactorExpiresAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  playlists  Playlist[]
  likedSongs LikedSong[]
  searchHistory SearchHistory[]
  payments   Payment[]
  songs      Song[]

  @@map("users")
}

model Playlist {
  id          String   @id @default(cuid())
  name        String
  description String?
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user  User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  tracks PlaylistTrack[]

  @@map("playlists")
}

model PlaylistTrack {
  id         String   @id @default(cuid())
  playlistId String
  trackId    String
  trackTitle String
  trackArtist String
  trackCover String
  trackVideoId String?
  trackDuration Int
  position   Int
  addedAt    DateTime @default(now())

  playlist Playlist @relation(fields: [playlistId], references: [id], onDelete: Cascade)

  @@map("playlist_tracks")
}

model LikedSong {
  id         String   @id @default(cuid())
  userId     String
  trackId    String
  trackTitle String
  trackArtist String
  trackAlbum String
  trackCover String
  trackVideoId String?
  trackDuration Int
  likedAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, trackId])
  @@map("liked_songs")
}

model SearchHistory {
  id        String   @id @default(cuid())
  userId    String
  query     String
  results   String?  // JSON string of results
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("search_history")
}

model Payment {
  id        String         @id @default(cuid())
  userId    String
  plan      SubscriptionPlan
  orderId   String         @unique
  status    PaymentStatus  @default(CREATED)
  amount    Float
  currency  String         @default("EUR")
  raw       Json?
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, status])
  @@map("payments")
}

model Song {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  artist      String
  album       String?
  cover       String?
  duration    Int?
  videoId     String?
  audioUrl    String?
  createdById String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  createdBy User? @relation(fields: [createdById], references: [id], onDelete: SetNull)

  @@index([createdById])
  @@index([videoId])
  @@map("songs")
}
